{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/*"
            ]
        },
        "lib" : [
            "es6",
            "esnext.asynciterable"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
